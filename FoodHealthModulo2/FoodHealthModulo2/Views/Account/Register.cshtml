@model FoodHealthModulo2.Models.RegisterViewModel
@{ ViewBag.Title = "Registrarse";
}

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

<section id="about" class="about-section text-center">
    <div class="container">
        <div class="row">
            <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
                <div class="card card-signin my-5">
                    <div class="card-body">
                        <h5 class="card-title text-center">Registrarse</h5>
                        <form class="form-signin">
                            <div class="form-group">
                                @Html.LabelFor(m => m.Email, new { @class = " control-label " })
                                <div class="form-label-group">
                                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.Password, new { @class = "control-label " })
                                <div class="form-label-group">
                                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.ConfirmPassword, new { @class = " control-label " })
                                <div class="form-label-group">
                                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                                </div>
                            </div>
                            <hr class="my-4">
                            <div class="form-group text-center">
                                <div class="col-md-offset-2 col-md-13">
                                    <input type="submit" class="btn btn-lg btn-outline-success btn-block-text-uppercase" value="Registrarse" />
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
    }


    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
